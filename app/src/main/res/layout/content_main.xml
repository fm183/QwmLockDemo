<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qwm.qwmlockdemo.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_devices_address"
        android:gravity="center"
        android:textSize="30sp"
        android:hint="请选择硬件地址"
        android:layout_width="300dp"
        android:background="#999999"
        android:onClick="selectAddress"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_baute_rate"
        android:gravity="center"
        android:textSize="30sp"
        android:hint="请选择波特率"
        android:layout_width="300dp"
        android:background="#777777"
        android:onClick="selectBauteRate"
        android:layout_height="40dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_board_address"
        android:gravity="center"
        android:textSize="30sp"
        android:inputType="number"
        android:hint="请输入板地址(编号，如：01)"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/edt_lock_address"
        android:gravity="center"
        android:textSize="30sp"
        android:hint="请输入锁地址(编号，如：01)"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="开锁"
        android:layout_width="200dp"
        android:onClick="openLock"
        android:layout_height="wrap_content" />

</LinearLayout>
